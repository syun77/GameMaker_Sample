{
  // 歩き中
  state = STATE_RUN;
}
else if(vspeed != 0)
{
  // ジャンプ中
  state = STATE_JUMP;
}

// アニメ用タイマー更新
tAnim++;

// 状態に応じた画像番号を設定する
switch(state)
{
case STATE_STAND:
  subImage = 0;
  if(tAnim%240 &gt; 180)
  {
    // たまにまばたきする
    subImage = 2;
  }
  break;
  
case STATE_RUN:
  subImage = 1;
  if(tAnim%12 &lt; 6)
  {
    // 走りと立ちを交互に繰り返す
    subImage = 0;
  }
  break;
  
case STATE_JUMP:
  subImage = 1;
  break;
  
case STATE_DAMAGE:
  subImage = 3;
  break;
}

